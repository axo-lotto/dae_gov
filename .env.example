# DAE-GOV Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM API KEYS (Required for Phase 5)
# ============================================================================

# Anthropic Claude API (Primary)
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI API (Optional fallback)
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# NEO4J CONFIGURATION (Required for Phase 4)
# ============================================================================

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# PATHS (Optional, defaults to DAE_HYPHAE_1 structure)
# ============================================================================

# DAE_GOV_DATA_DIR=/Users/daedalea/Desktop/DAE_HYPHAE_1/data
# DAE_GOV_KNOWLEDGE_BASE=/Users/daedalea/Desktop/DAE_HYPHAE_1/knowledge_base
# DAE_GOV_LOG_DIR=/Users/daedalea/Desktop/DAE_HYPHAE_1/tests/logs

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

DAE_GOV_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# FAISS Index Configuration
FAISS_INDEX_TYPE=IVFFlat
FAISS_NLIST=100

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIM=384

# LLM Hybrid Routing Thresholds
PURE_DAE_THRESHOLD=0.80
HYBRID_THRESHOLD=0.50

# Last Updated: November 7, 2025
